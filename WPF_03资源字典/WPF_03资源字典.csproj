<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\MiSans-Regular.ttf" />
    <None Remove="Resources\SmileySans-Oblique.ttf" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Fonts\MiSans-Regular.ttf" />
    <Resource Include="Resources\Fonts\SmileySans-Oblique.ttf" />
  </ItemGroup>

</Project>
