<UserControl x:Class="WPF_05自定义控件.Components.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPF_05自定义控件.Components"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             FontFamily="{StaticResource Dingding}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Styles/ControlPanelStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Viewbox>
        <StackPanel>
            <WrapPanel>
                <Label Content="警报最大值" Style="{StaticResource TitleLabelStyle}" />
                <TextBox Style="{StaticResource CustomTextBoxStyle}" Text="{Binding Maximum, RelativeSource={RelativeSource AncestorType=local:ControlPanel}, UpdateSourceTrigger=PropertyChanged}" />
            </WrapPanel>
            <WrapPanel Margin="0,10,0,0">
                <Label Content="警报最小值" Style="{StaticResource TitleLabelStyle}" />
                <TextBox Style="{StaticResource CustomTextBoxStyle}" Text="{Binding Minimum, RelativeSource={RelativeSource AncestorType=local:ControlPanel}, UpdateSourceTrigger=PropertyChanged}" />
            </WrapPanel>
            <WrapPanel Margin="0,10,0,0">
                <Label Content="当前温度" Style="{StaticResource TitleLabelStyle}" />
                <TextBox Style="{StaticResource CustomTextBoxStyle}" Text="{Binding Value, RelativeSource={RelativeSource AncestorType=local:ControlPanel}, UpdateSourceTrigger=PropertyChanged}" />
            </WrapPanel>
        </StackPanel>
    </Viewbox>
</UserControl>
